<%- include('partials/header'); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="blogCompose">Title</label>
        <input class="form-control" id="blogCompose" type="text" name="blogTitle" required autocomplete="off">
    
        <label for="postBody">Post</label>
        <textarea class="form-control"  id="postBody" name="blogBody"  cols="30" rows="5" required autocomplete="off"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
   
</form>

<%- include('partials/footer'); -%>